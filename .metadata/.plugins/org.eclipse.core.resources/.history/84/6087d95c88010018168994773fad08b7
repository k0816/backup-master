/*---チェックリストの全解除、選択---*/
    flag =false;
    function allChange(){
        flag = !flag;
        var check = document.getElementsByName('partyPlace');
        for(i = 0; i < check.length; i++){
            check[i].checked = !flag;
        }
    }

/*---カレンダー機能---*/
